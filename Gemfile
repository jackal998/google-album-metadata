source "https://rubygems.org"

ruby ">= 2.6.0"

# Core dependencies
gem "colorize", "~> 0.8.1"     # For colorized terminal output
gem "rchardet", "~> 1.8.0"     # For character encoding detection

# Development and testing
group :development, :test do
  gem "minitest", "~> 5.0"    # Testing framework
  gem "rspec", "~> 3.12"       # RSpec testing framework
  gem "pry", "~> 0.14.1"       # Interactive debugging
  gem "standard", "~> 1.0"     # Ruby style guide and linter
  gem "rake", "~> 13.0"        # Task automation
  gem "rubocop-minitest", "~> 0.22"
  gem "rubocop-rake", "~> 0.6"
  gem "rubocop-rspec", "~> 2.22" # RSpec specific linting
end

# Documentation
group :development do
  gem "yard", "~> 0.9"      # Documentation generator
end
